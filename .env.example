# SynapseGuard Environment Configuration Template
# TiDB AgentX Hackathon 2025
# Copy this file to .env and fill in your actual values

# TiDB Serverless Connection
TIDB_HOST=your-tidb-host.tidbcloud.com
TIDB_USER=your-tidb-user
TIDB_PASSWORD=your-tidb-password
TIDB_DATABASE=your-tidb-database

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# External Service APIs (Optional for full functionality)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
SENDGRID_API_KEY=your-sendgrid-key

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=false